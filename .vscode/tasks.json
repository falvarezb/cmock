{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/out/${fileBasenameNoExtension}"                               
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "test",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "${fileDirname}/timer.c",
                "-o",
                "${fileDirname}/out/${fileBasenameNoExtension}", 
                "-lcmocka"                              
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "test"
        },
        {
            "type": "cppbuild",
            "label": "object file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-c",
                "${file}",
                "-o",
                "${fileDirname}/out/${fileBasenameNoExtension}.o"                               
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "test"
        },
        {
            "type": "shell",
            "label": "clean",
            "command": "rm",
            "args": [
                "-f",
                "-r",
                "${workspaceFolder}/out/*"                               
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "clean"
        }
    ],
    "version": "2.0.0"
}